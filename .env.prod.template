# Tiger MCP Production Environment Configuration Template
# Copy this file to .env.prod and configure your production values

# =======================
# Tiger API Configuration
# =======================
TIGER_CLIENT_ID=your_production_client_id
TIGER_PRIVATE_KEY=your_production_private_key
TIGER_ACCOUNT=your_production_account
TIGER_SANDBOX=false

# =======================
# Database Configuration
# =======================
POSTGRES_DB=tiger_mcp_prod
POSTGRES_USER=tiger_user
POSTGRES_PASSWORD=secure_production_password
POSTGRES_PORT=5432

# =======================
# Redis Configuration
# =======================
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password

# =======================
# Application Configuration
# =======================
SECRET_KEY=secure-production-secret-key-use-secrets-manager
LOG_LEVEL=warning
DEBUG=false
ENVIRONMENT=production

# =======================
# CORS Configuration
# =======================
CORS_ORIGINS=["https://yourdomain.com","https://api.yourdomain.com"]

# =======================
# JWT Configuration
# =======================
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# =======================
# SSL/TLS Configuration
# =======================
SSL_CERT_PATH=/etc/ssl/certs/server.crt
SSL_KEY_PATH=/etc/ssl/certs/server.key
SSL_CA_PATH=/etc/ssl/certs/ca.crt

# =======================
# Monitoring & Logging
# =======================
# SENTRY_DSN=https://your-sentry-dsn-here
# PROMETHEUS_ENABLED=true
# JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# =======================
# Backup Configuration
# =======================
# S3_BACKUP_BUCKET=tiger-mcp-backups
# S3_ACCESS_KEY_ID=your_s3_access_key
# S3_SECRET_ACCESS_KEY=your_s3_secret_key
# BACKUP_RETENTION_DAYS=30